<label>School:</label><input type="text" name="school" value="<%= model.school %>"><br>
<label>Class:</label><input type="text" name="class" value="<%= model.class %>"><br>


<label>Section</label>
<select name="section">
  <option value="A">A sec</option>
  <option value="B">B sec</option>
  <option value="C">C sec</option>
  <option value="D">D sec</option>
  <option value="E">E sec</option>
  <option value="F">F sec</option>
</select><br>

<input class="button" type="submit" name="add" value="add"><br>


</form>

</div>
